  "homepage": "https://github.com/step-security/background-action#readme",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "parse-duration": "^2.1.4",
    "tail": "2.1.1",
    "wait-on": "^7.2.0"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.1",
    "axios": "^1.8.4",
